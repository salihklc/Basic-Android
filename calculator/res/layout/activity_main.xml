<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.calculator.MainActivity" >

    	<EditText
        android:id="@+id/number1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#f00"
        android:hint=" Gimme the first Number Dude"
         />

    	<EditText
    	    android:id="@+id/number2"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/number1"
    	    android:layout_below="@+id/number1"
    	    android:ems="10"
    	    android:textSize="14sp"
    	    android:textColor="#f00"
    	    android:hint=" Cmon second Number dude!!"
    	   />

    	<TextView
    	    android:id="@+id/display"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/plus"
    	    android:layout_alignRight="@+id/number2"
    	    android:layout_below="@+id/plus"
    	    android:layout_marginTop="21dp"
    	    android:textColor="#f00"
    	    android:text="Answer is :"
    	    android:textSize="20sp" />

    	<Button
    	    android:id="@+id/plus"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/number2"
    	    android:layout_below="@+id/number2"
    	    android:layout_marginTop="16dp"
    	    android:text="plus" />

    	<Button
    	    android:id="@+id/minus"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/display"
    	    android:layout_toRightOf="@+id/plus"
    	    android:text="minus" />

    	<Button
    	    android:id="@+id/div"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/mult"
    	    android:layout_alignBottom="@+id/mult"
    	    android:layout_alignParentRight="true"
    	    android:layout_toRightOf="@+id/mult"
    	    android:text="div" />

    	<Button
    	    android:id="@+id/mult"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/display"
    	    android:layout_toRightOf="@+id/minus"
    	    android:text="mult" />
    	
</RelativeLayout>
